<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemMicrocycle"
    style="@style/ItemCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/itemMicrocycleNumberTextView"
            style="@style/ItemNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/itemMicrocycleDivider"
            style="@style/Divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/itemMicrocycleNumberTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemMicrocycleNameTextView"
            style="@style/ItemPrimaryTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Name"
            app:layout_constraintEnd_toStartOf="@id/itemMicrocycleDragIcon"
            app:layout_constraintStart_toEndOf="@id/itemMicrocycleDivider"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemMicrocycleNumberOfDaysTextView"
            style="@style/ItemAdditionalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/itemMicrocycleNameTextView"
            app:layout_constraintTop_toBottomOf="@id/itemMicrocycleNameTextView" />

        <TextView
            android:id="@+id/itemMicrocycleNumberOfDays2TextView"
            style="@style/ItemAdditionalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="days"
            app:layout_constraintBottom_toBottomOf="@id/itemMicrocycleNumberOfDaysTextView"
            app:layout_constraintStart_toEndOf="@id/itemMicrocycleNumberOfDaysTextView"
            app:layout_constraintTop_toTopOf="@id/itemMicrocycleNumberOfDaysTextView" />

        <ImageView
            android:id="@+id/itemMicrocycleDragIcon"
            style="@style/ItemDragIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:contentDescription="Drag indicator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>