<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetSeriesLog"
    style="@style/BottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bottomSheetSeriesLogDragIcon"
        style="@style/BottomSheetDragIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottomSheetSeriesLogRepsTextView"
        style="@style/ItemPrimaryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Reps:"
        app:layout_constraintBottom_toBottomOf="@id/bottomSheetSeriesLogRepsEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottomSheetSeriesLogRepsEditText" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/bottomSheetSeriesLogRepsEditText"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="Reps"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bottomSheetSeriesLogRepsTextView"
        app:layout_constraintTop_toBottomOf="@id/bottomSheetSeriesLogDragIcon" />

    <TextView
        android:id="@+id/bottomSheetSeriesLogWeightTextView"
        style="@style/ItemPrimaryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Weight:"
        app:layout_constraintBottom_toBottomOf="@id/bottomSheetSeriesLogWeightEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottomSheetSeriesLogWeightEditText" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/bottomSheetSeriesLogWeightEditText"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Weight"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bottomSheetSeriesLogWeightTextView"
        app:layout_constraintTop_toBottomOf="@id/bottomSheetSeriesLogRepsEditText" />

    <TextView
        android:id="@+id/bottomSheetSeriesLogRepsInReserveTextView"
        style="@style/ItemPrimaryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Reps in reserve:"
        app:layout_constraintBottom_toBottomOf="@id/bottomSheetSeriesLogRepsInReserveEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottomSheetSeriesLogRepsInReserveEditText" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/bottomSheetSeriesLogRepsInReserveEditText"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="RiR"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bottomSheetSeriesLogRepsInReserveTextView"
        app:layout_constraintTop_toBottomOf="@id/bottomSheetSeriesLogWeightEditText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottomSheetSeriesLogButton"
        style="@style/MaterialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="Log"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomSheetSeriesLogRepsInReserveEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>