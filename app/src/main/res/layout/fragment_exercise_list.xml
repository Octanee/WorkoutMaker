<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.plan.exerciselist.ExerciseListFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <com.ernestoyaquello.dragdropswiperecyclerview.DragDropSwipeRecyclerView
            android:id="@+id/exerciseListFragmentExerciseListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:behind_swiped_item_bg_color="#F44336"
            app:behind_swiped_item_bg_color_secondary="#03A9F4"
            app:behind_swiped_item_icon="@drawable/ic_delete"
            app:behind_swiped_item_icon_margin="16dp"
            app:behind_swiped_item_icon_secondary="@drawable/ic_edit"
            app:divider="@drawable/divider"
            app:item_layout="@layout/item_exercise_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="10"
            tools:listitem="@layout/item_exercise_list" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/exerciseListFragmentNewExerciseFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/paradise_pink"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_add"
            app:borderWidth="0dp"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/cultured" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>